{
    "name": "template-fe",
    "private": true,
    "version": "0.0.0",
    "scripts": {
        "preinstall": "npx only-allow yarn",
        "dev": "vite",
        "build": "yarn lint && tsc && vite build",
        "preview": "vite preview",
        "prepare": "husky install",
        "lint": "yarn eslint --fix --ignore-pattern src/fonts/* src/**/* && yarn prettier --write .",
        "lint:auto": "yarn eslint --fix --no-color --ext .js,.jsx,.ts,.tsx --ignore-pattern src/fonts/* src/**/* && yarn prettier --write --no-color ."
    },
    "dependencies": {
        "@chakra-ui/react": "^2.2.4",
        "@emotion/react": "^11.9.3",
        "@emotion/styled": "^11.9.3",
        "axios": "^0.27.2",
        "dompurify": "^2.3.10",
        "framer-motion": "^6.5.1",
        "node-html-parser": "^5.3.3",
        "react": "^18.0.0",
        "react-dom": "^18.0.0",
        "react-router-dom": "^6.3.0"
    },
    "devDependencies": {
        "@types/react": "^18.0.0",
        "@types/react-dom": "^18.0.0",
        "@typescript-eslint/eslint-plugin": "^5.27.1",
        "@typescript-eslint/parser": "^5.27.1",
        "@vitejs/plugin-react": "^1.3.0",
        "autoprefixer": "^10.4.7",
        "eslint": "^7.32.0 || ^8.2.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-react": "^7.28.0",
        "eslint-plugin-react-hooks": "^4.3.0",
        "git-format-staged": "^3.0.0",
        "husky": "^8.0.0",
        "lint-staged": "^13.0.1",
        "postcss": "^8.4.14",
        "prettier": "2.6.2",
        "tailwindcss": "^3.1.2",
        "typescript": "^4.6.3",
        "vite": "^2.9.9"
    },
    "lint-staged": {
        "**/*.{js,jsx,ts,tsx}": [
            "yarn lint:auto",
            "git add ."
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn lint:auto",
            "pre-push": "yarn lint:auto"
        }
    }
}
